{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "no-unused-vars": ["warn", { "varsIgnorePattern": "^[A-Z_]", "argsIgnorePattern": "^_" }],
    "react-hooks/exhaustive-deps": "warn",
    "no-undef": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "process": "readonly"
  }
}